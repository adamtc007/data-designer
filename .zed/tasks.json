[
  {
    "label": "Onboarding: compile & run demo",
    "command": "cargo",
    "args": ["run", "-p", "onboarding-cli"],
    "cwd": "$ZED_WORKTREE_ROOT",
    "reveal": "always",
    "hide": "never",
    "use_new_terminal": false
  },
  {
    "label": "Onboarding: tests",
    "command": "cargo",
    "args": ["test", "-p", "onboarding"],
    "cwd": "$ZED_WORKTREE_ROOT",
    "reveal": "always"
  },
  {
    "label": "Onboarding: watch (rebuild + run)",
    "command": "cargo",
    "args": ["watch", "-x", "run -p onboarding-cli"],
    "cwd": "$ZED_WORKTREE_ROOT",
    "reveal": "always"
  },
  {
    "label": "Onboarding: plan → DOT",
    "command": "bash",
    "args": ["-lc", "./scripts/plan_to_dot.sh"],
    "cwd": "$ZED_WORKTREE_ROOT",
    "reveal": "always"
  },
  {
    "label": "Onboarding: DOT → PNG & open",
    "command": "bash",
    "args": ["-lc", "dot -Tpng var/plan.dot -o var/plan.png && (xdg-open var/plan.png >/dev/null 2>&1 || open var/plan.png || true)"],
    "cwd": "$ZED_WORKTREE_ROOT",
    "reveal": "always"
  }
]
