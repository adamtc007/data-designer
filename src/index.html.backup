        function openTab(tabId, title, content, language = 'plaintext') {
            // Add tab if not exists
            if (!openTabs.includes(tabId)) {
                openTabs.push(tabId);

                const tabsContainer = document.getElementById('editor-tabs');
                const tabElement = document.createElement('div');
                tabElement.className = 'editor-tab';
                tabElement.dataset.file = tabId;
                tabElement.innerHTML = `
                    ${title}
                    <span class="editor-tab-close" onclick="closeTab('${tabId}')">&times;</span>
                `;
                tabElement.addEventListener('click', () => switchTab(tabId));
                tabsContainer.appendChild(tabElement);
            }

            // Switch to tab
            switchTab(tabId);

            // Create Monaco editor for this tab if needed
            if (language === 'dsl' && !editor) {
                createMonacoEditor(content);
            }
        }

        function switchTab(tabId) {
            // Update tab appearance
            document.querySelectorAll('.editor-tab').forEach(tab => {
                tab.classList.remove('active');
            });
            document.querySelector(`[data-file="${tabId}"]`).classList.add('active');

            // Update editor content
            activeTab = tabId;

            if (tabId === 'welcome') {
                document.getElementById('welcome-editor').style.display = 'flex';
                if (editor) {
                    editor.getDomNode().style.display = 'none';
                }
            } else {
                document.getElementById('welcome-editor').style.display = 'none';
                if (editor) {
                    editor.getDomNode().style.display = 'block';
                    editor.layout();
                }
            }
        }

        function closeTab(tabId) {
            if (tabId === 'welcome' && openTabs.length === 1) return; // Keep at least one tab

            openTabs = openTabs.filter(id => id !== tabId);
            document.querySelector(`[data-file="${tabId}"]`).remove();

            // Switch to first available tab
            if (activeTab === tabId) {
                const newActive = openTabs[0] || 'welcome';
                switchTab(newActive);
            }
        }

        function createMonacoEditor(initialContent = '') {
            require(['vs/editor/editor.main'], function() {
                editor = monaco.editor.create(document.getElementById('monaco-editor'), {
                    value: initialContent,
                    language: 'plaintext',
                    theme: 'vs-dark',
                    automaticLayout: true,
                    fontSize: 14,
                    lineNumbers: 'on',
                    roundedSelection: false,
                    scrollBeyondLastLine: false,
                    readOnly: false,
                    minimap: { enabled: true },
                    scrollbar: {
                        vertical: 'visible',
                        horizontal: 'visible',
                        useShadows: true,
                        verticalHasArrows: false,
                        horizontalHasArrows: false,
                        verticalScrollbarSize: 14,
                        horizontalScrollbarSize: 14
                    }
                });

                // Position editor properly
                const container = editor.getDomNode();
                container.style.height = '100%';
                container.style.width = '100%';
            });
        }

