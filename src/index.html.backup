        function setupMenuBar() {
            const menuItems = document.querySelectorAll('.menu-item');

            menuItems.forEach(item => {
                item.addEventListener('click', (e) => {
                    e.stopPropagation();
                    const menuType = item.dataset.menu;
                    toggleMenu(menuType);
                });
            });

            // Close menus when clicking elsewhere
            document.addEventListener('click', () => {
                closeAllMenus();
            });
        }

        function setupActivityBar() {
            const activityItems = document.querySelectorAll('.activity-item');

            activityItems.forEach(item => {
                item.addEventListener('click', () => {
                    const panel = item.dataset.panel;
                    switchActivityPanel(panel);
                });
            });
        }

        function setupBottomPanel() {
            const bottomTabs = document.querySelectorAll('.bottom-panel-tab');

            bottomTabs.forEach(tab => {
                tab.addEventListener('click', () => {
                    const panel = tab.dataset.panel;
                    switchBottomPanel(panel);
                });
            });
        }

        function setupTabs() {
            // Tab switching will be handled when tabs are created
        }

        function toggleMenu(menuType) {
            closeAllMenus();
            const dropdown = document.getElementById(`${menuType}-menu`);
            if (dropdown) {
                dropdown.style.display = dropdown.style.display === 'block' ? 'none' : 'block';
            }
        }

        function closeAllMenus() {
            const dropdowns = document.querySelectorAll('.menu-dropdown');
            dropdowns.forEach(dropdown => {
                dropdown.style.display = 'none';
            });
