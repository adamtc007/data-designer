                                border-bottom: 1px solid #404040;
                                display: flex;
                                justify-content: space-between;
                                align-items: center;
                            }
                            .editor-control-btn {
                                background: #404040;
                                border: none;
                                color: #cccccc;
                                padding: 4px 8px;
                                cursor: pointer;
                                border-radius: 3px;
                                margin-left: 4px;
                            }
                            .editor-control-btn:hover { background: #505050; }
                            #monaco-editor { height: calc(100vh - 50px); width: 100%; }
                        </style>
                    </head>
                    <body>
                        <div class="editor-container undocked-editor">
                            <div class="editor-panel-header">
                                <span class="editor-panel-title">Code Editor (Undocked)</span>
                                <div class="editor-panel-controls">
                                    <button class="editor-control-btn" onclick="window.opener.dockEditor()" title="Dock Editor">📥</button>
                                    <button class="editor-control-btn" onclick="window.close()" title="Close">❌</button>
                                </div>
                            </div>
                            <div id="monaco-editor"></div>
                        </div>
                    </body>
                    </html>
                `);

                // Move Monaco editor to new window
                if (window.editor) {
                    const model = window.editor.getModel();
                    const value = window.editor.getValue();

                    // Initialize Monaco in new window
                    undockedWindow.onload = () => {
                        require.config({ paths: { 'vs': 'https://cdn.jsdelivr.net/npm/monaco-editor@0.45.0/min/vs' }});
                        require(['vs/editor/editor.main'], function () {
                            const undockedEditor = monaco.editor.create(undockedWindow.document.getElementById('monaco-editor'), {
                                value: value,
                                language: 'javascript',
                                theme: 'vs-dark',
                                automaticLayout: true,
                                scrollBeyondLastLine: false,
                                minimap: { enabled: true },
                                fontSize: 14,
                                wordWrap: 'on'
                            });

                            // Sync changes back to main window
                            undockedEditor.onDidChangeModelContent(() => {
                                if (window.opener && window.opener.editor) {
                                    window.opener.editor.setValue(undockedEditor.getValue());
                                }
                            });
                        });
                    };
                }

                // Update main window editor container
                editorContainer.innerHTML = `
                    <div class="editor-panel-header">
                        <span class="editor-panel-title">Code Editor (Undocked)</span>
                        <div class="editor-panel-controls">
                            <button class="editor-control-btn" onclick="dockEditor()" title="Dock Editor">📥</button>
                        </div>
                    </div>
                    <div class="undocked-placeholder">
                        <h3>📤 Editor Undocked</h3>
                        <p>The code editor has been moved to a separate window.</p>
                        <button class="btn" onclick="dockEditor()">📥 Dock Editor</button>
                    </div>
                `;

                editorUndocked = true;

                // Handle window close
                undockedWindow.addEventListener('beforeunload', () => {
                    dockEditor();
                });

            } catch (error) {
                console.error('Failed to undock editor:', error);
                addToOutput('error', 'Failed to undock editor');
            }
        }

        function dockEditor() {
            if (!editorUndocked) return;

            try {
                let editorValue = '';

                // Get value from undocked editor if available
                if (undockedWindow && !undockedWindow.closed && undockedWindow.monaco && undockedWindow.monaco.editor) {
                    const editors = undockedWindow.monaco.editor.getEditors();
                    if (editors.length > 0) {
                        editorValue = editors[0].getValue();
                    }
                }

                // Close undocked window
                if (undockedWindow && !undockedWindow.closed) {
                    undockedWindow.close();
                }

                // Restore editor container
                const editorContainer = document.getElementById('editor-container');
                editorContainer.innerHTML = `
                    <div class="editor-panel-header">
                        <span class="editor-panel-title">Code Editor</span>
                        <div class="editor-panel-controls">
                            <button class="editor-control-btn" onclick="undockEditor()" title="Undock Editor">📤</button>
                            <button class="editor-control-btn" onclick="toggleEditorMaximize()" title="Maximize/Restore">🔲</button>
                        </div>
                    </div>
                    <div id="monaco-editor"></div>
                `;

                // Reinitialize Monaco editor
                setTimeout(() => {
                    if (typeof monaco !== 'undefined') {
                        window.editor = monaco.editor.create(document.getElementById('monaco-editor'), {
                            value: editorValue,
                            language: 'javascript',
                            theme: 'vs-dark',
                            automaticLayout: true,
                            scrollBeyondLastLine: false,
                            minimap: { enabled: true },
                            fontSize: 14,
                            wordWrap: 'on',
                            scrollbar: {
                                vertical: 'visible',
                                horizontal: 'visible',
                                useShadows: true,
                                verticalHasArrows: false,
                                horizontalHasArrows: false,
                                verticalScrollbarSize: 14,
                                horizontalScrollbarSize: 14
                            }
                        });
                    }
                }, 100);

                editorUndocked = false;
                undockedWindow = null;

            } catch (error) {
                console.error('Failed to dock editor:', error);
                addToOutput('error', 'Failed to dock editor');
            }
        }

        function toggleEditorMaximize() {
            const mainContainer = document.querySelector('.main-container');
            const editorContainer = document.getElementById('editor-container');

            if (editorContainer.classList.contains('maximized')) {
                editorContainer.classList.remove('maximized');
                mainContainer.style.display = 'flex';
                addToOutput('info', 'Editor restored to normal view');
            } else {
                editorContainer.classList.add('maximized');
                mainContainer.style.display = 'block';
                addToOutput('info', 'Editor maximized');
            }

            // Trigger layout update for Monaco
            if (window.editor) {
                setTimeout(() => {
                    window.editor.layout();
                }, 100);
            }
        }

        function openSchemaViewer() {
            if (window.__TAURI_INVOKE__) {
                window.__TAURI_INVOKE__('open_schema_viewer').then(() => {
                    addToOutput('success', 'Schema viewer opened in new window');
                }).catch(error => {
                    addToOutput('error', `Failed to open schema viewer: ${error}`);
                });
            } else {
                addToOutput('info', 'Schema viewer requires Tauri environment');
            }
        }
    </script>

    <!-- Import main TypeScript application -->
    <script type="module" src="/main.ts"></script>
</body>
</html>