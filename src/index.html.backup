                </div>
                <div class="menu-dropdown-item" onclick="menuAction('preferences')">
                    ⚙️ Preferences
                </div>
            </div>
        </div>

        <div class="menu-item" data-menu="help">
            Help
            <div class="menu-dropdown" id="help-menu">
                <div class="menu-dropdown-item" onclick="menuAction('documentation')">
                    📖 Documentation
                </div>
                <div class="menu-dropdown-item" onclick="menuAction('about')">
                    ℹ️ About
                </div>
            </div>
        </div>
    </div>

    <!-- Main IDE Container -->
    <div class="ide-container">
        <!-- Activity Bar -->
        <div class="activity-bar">
            <div class="activity-item active" data-panel="explorer" title="Explorer">
                📁
            </div>
            <div class="activity-item" data-panel="database" title="Database">
                🗄️
            </div>
            <div class="activity-item" data-panel="rules" title="Rules">
                📋
            </div>
            <div class="activity-item" data-panel="products" title="Products Management">
                📦
            </div>
            <div class="activity-item" data-panel="services" title="Services Management">
