<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Data Designer IDE</title>
    <script type="module">
        import { invoke } from '@tauri-apps/api/core';
        window.__TAURI_INVOKE__ = invoke;
    </script>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Monaco', 'Consolas', monospace;
            background: #1e1e1e;
            color: #d4d4d4;
            height: 100vh;
            overflow: hidden;
            display: flex;
            flex-direction: column;
        }

        /* Menu Bar */
        .menu-bar {
            background: #2d2d30;
            border-bottom: 1px solid #3e3e42;
            height: 30px;
            display: flex;
            align-items: center;
            padding: 0 10px;
            user-select: none;
            z-index: 1000;
        }

        .menu-item {
            padding: 5px 12px;
            cursor: pointer;
            border-radius: 3px;
            position: relative;
        }

        .menu-item:hover {
            background: #3e3e42;
        }

        .menu-item.active {
            background: #094771;
        }

        .menu-dropdown {
            position: absolute;
            top: 100%;
            left: 0;
            background: #2d2d30;
            border: 1px solid #3e3e42;
            border-radius: 5px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
            min-width: 180px;
            display: none;
            z-index: 1001;
        }

        .menu-dropdown-item {
            padding: 8px 16px;
            cursor: pointer;
            white-space: nowrap;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .menu-dropdown-item:hover {
            background: #3e3e42;
        }

        .menu-dropdown-separator {
            height: 1px;
            background: #3e3e42;
            margin: 5px 0;
        }

        /* Main IDE Layout */
        .ide-container {
            flex: 1;
            display: flex;
            height: calc(100vh - 30px);
        }

        /* Activity Bar (Left Side) */
        .activity-bar {
            width: 50px;
            background: #2d2d30;
            border-right: 1px solid #3e3e42;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 10px 0;
        }

        .activity-item {
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            border-radius: 5px;
            margin-bottom: 5px;
            font-size: 18px;
            position: relative;
        }

        .activity-item:hover {
            background: #3e3e42;
        }

        .activity-item.active {
            background: #094771;
            border-left: 2px solid #007acc;
        }

        .activity-item.active::before {
            content: '';
            position: absolute;
            left: -1px;
            top: 0;
            bottom: 0;
            width: 2px;
            background: #007acc;
        }

        /* Side Panel */
        .side-panel {
            width: 300px;
            background: #252526;
            border-right: 1px solid #3e3e42;
            display: none;
            flex-direction: column;
        }

        .side-panel.active {
            display: flex;
        }

        .side-panel-header {
            padding: 15px 20px;
            border-bottom: 1px solid #3e3e42;
            background: #2d2d30;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .side-panel-title {
            font-size: 14px;
            font-weight: 600;
            color: #e8e8e8;
        }

        .side-panel-content {
            flex: 1;
            overflow-y: auto;
            padding: 15px;
        }

        /* Editor Area */
        .editor-area {
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        .editor-tabs {
            background: #2d2d30;
            border-bottom: 1px solid #3e3e42;
            display: flex;
            height: 35px;
            overflow-x: auto;
        }

        .editor-tab {
            background: #2d2d30;
            border: none;
            color: #cccccc;
            padding: 8px 15px;
            cursor: pointer;
            border-right: 1px solid #3e3e42;
            white-space: nowrap;
            display: flex;
            align-items: center;
            gap: 8px;
            min-width: 120px;
        }

        .editor-tab:hover {
            background: #3e3e42;
        }

        .editor-tab.active {
            background: #1e1e1e;
            color: #ffffff;
        }

        .editor-tab-close {
            opacity: 0.7;
            cursor: pointer;
            border-radius: 2px;
            padding: 2px;
        }

        .editor-tab-close:hover {
            opacity: 1;
            background: #3e3e42;
        }

        .editor-container {
            flex: 1;
            background: #1e1e1e;
            position: relative;
            overflow: hidden;
            display: flex;
            flex-direction: column;
        }

        #monaco-editor {
            flex: 1;
            min-height: 0;
            overflow: auto;
        }

        /* Enhanced scroll bars for Monaco Editor */
        .editor-container .monaco-editor {
            overflow: auto !important;
        }

        .editor-container .monaco-editor .monaco-scrollable-element {
            overflow: auto !important;
        }

        /* Custom scroll bars */
        .editor-container::-webkit-scrollbar,
        .monaco-editor::-webkit-scrollbar {
            width: 14px;
            height: 14px;
        }

        .editor-container::-webkit-scrollbar-track,
        .monaco-editor::-webkit-scrollbar-track {
            background: #1e1e1e;
        }

        .editor-container::-webkit-scrollbar-thumb,
        .monaco-editor::-webkit-scrollbar-thumb {
            background: #424242;
            border-radius: 6px;
            border: 2px solid #1e1e1e;
        }

        .editor-container::-webkit-scrollbar-thumb:hover,
        .monaco-editor::-webkit-scrollbar-thumb:hover {
            background: #666666;
        }

        /* Editor panel header with undocking controls */
        .editor-panel-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 8px 12px;
            background: #2d2d30;
            border-bottom: 1px solid #3e3e42;
            color: #cccccc;
            font-size: 12px;
        }

        .editor-panel-controls {
            display: flex;
            gap: 8px;
        }

        .editor-control-btn {
            padding: 4px 8px;
            background: transparent;
            border: 1px solid #464647;
            color: #cccccc;
            border-radius: 3px;
            font-size: 11px;
            cursor: pointer;
            transition: all 0.2s;
        }

        .editor-control-btn:hover {
            background: #094771;
            border-color: #007ACC;
        }

        /* Undocked editor window styles */
        .undocked-editor {
            position: fixed;
            top: 50px;
            left: 50px;
            width: 800px;
            height: 600px;
            background: #1e1e1e;
            border: 1px solid #3e3e42;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
            z-index: 10000;
            display: flex;
            flex-direction: column;
            border-radius: 6px;
            overflow: hidden;
        }

        .undocked-editor .editor-panel-header {
            cursor: move;
            background: #0e639c;
        }

        .undocked-editor .editor-container {
            flex: 1;
            min-height: 0;
        }

        /* Undocked placeholder */
        .undocked-placeholder {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100%;
            text-align: center;
            padding: 40px;
            background: #252526;
        }

        .undocked-placeholder h3 {
            color: #cccccc;
            margin-bottom: 16px;
        }

        .undocked-placeholder p {
            color: #969696;
            margin-bottom: 24px;
        }

        /* Maximized editor */
        .editor-container.maximized {
            position: fixed !important;
            top: 0 !important;
            left: 0 !important;
            width: 100vw !important;
            height: 100vh !important;
            z-index: 9999 !important;
            background: #1e1e1e;
        }

        .editor-container.maximized #monaco-editor {
            height: calc(100vh - 50px) !important;
        }

        /* Bottom Panel */
        .bottom-panel {
            height: 200px;
            background: #1e1e1e;
            border-top: 1px solid #3e3e42;
            display: flex;
            flex-direction: column;
            min-height: 100px;
            resize: vertical;
        }

        .bottom-panel-tabs {
            background: #2d2d30;
            display: flex;
            height: 35px;
            border-bottom: 1px solid #3e3e42;
        }

        .bottom-panel-tab {
            background: transparent;
            border: none;
            color: #cccccc;
            padding: 8px 15px;
            cursor: pointer;
            border-right: 1px solid #3e3e42;
        }

        .bottom-panel-tab:hover {
            background: #3e3e42;
        }

        .bottom-panel-tab.active {
            background: #1e1e1e;
            color: #ffffff;
        }

        .bottom-panel-content {
            flex: 1;
            padding: 15px;
            overflow-y: auto;
            font-family: 'Monaco', 'Consolas', monospace;
            font-size: 13px;
        }

        /* Status Bar */
        .status-bar {
            height: 25px;
            background: #007acc;
            display: flex;
            align-items: center;
            padding: 0 15px;
            font-size: 12px;
            color: #ffffff;
        }

        .status-left {
            flex: 1;
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .status-right {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        /* Buttons */
        .btn {
            background: #0e639c;
            color: white;
            border: none;
            padding: 6px 12px;
            border-radius: 3px;
            cursor: pointer;
            font-size: 13px;
            display: inline-flex;
            align-items: center;
            gap: 5px;
        }

        .btn:hover {
            background: #1177bb;
        }

        .btn.secondary {
            background: #3e3e42;
        }

        .btn.secondary:hover {
            background: #4e4e52;
        }

        /* Panel specific styles */
        .tree-view {
            list-style: none;
        }

        .tree-item {
            padding: 4px 8px;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 6px;
        }

        .tree-item:hover {
            background: #3e3e42;
        }

        .tree-actions {
            margin-left: auto;
            opacity: 0;
            transition: opacity 0.2s;
        }

        .tree-item:hover .tree-actions {
            opacity: 1;
        }

        .tree-actions span {
            margin-left: 5px;
            cursor: pointer;
            padding: 2px;
            border-radius: 3px;
        }

        .tree-actions span:hover {
            background: #4a4a4a;
        }

        .tree-item.selected {
            background: #094771;
        }

        .tree-icon {
            width: 16px;
            text-align: center;
        }

        /* Connection status */
        .connection-status {
            display: flex;
            align-items: center;
            gap: 5px;
        }

        .connection-dot {
            width: 8px;
            height: 8px;
            border-radius: 50%;
            background: #f44336;
        }

        .connection-dot.connected {
            background: #4caf50;
        }

        /* Responsive */
        @media (max-width: 1200px) {
            .side-panel {
                width: 250px;
            }
        }

        .loading {
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 40px;
            color: #888;
        }

        .welcome-panel {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100%;
            text-align: center;
            color: #888;
        }

        .welcome-panel h2 {
            margin-bottom: 20px;
            color: #d4d4d4;
        }

        .welcome-actions {
            display: flex;
            gap: 10px;
            margin-top: 20px;
        }

        /* Modal Styles */
        .modal-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.7);
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 2000;
        }

        .modal-content {
            background: #2d2d30;
            border: 1px solid #3e3e42;
            border-radius: 8px;
            min-width: 400px;
            max-width: 600px;
            max-height: 80vh;
            overflow-y: auto;
        }

        .modal-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px 20px;
            border-bottom: 1px solid #3e3e42;
        }

        .modal-header h3 {
            margin: 0;
            color: #d4d4d4;
        }

        .modal-header button {
            background: none;
            border: none;
            color: #d4d4d4;
            font-size: 24px;
            cursor: pointer;
            padding: 0;
            width: 30px;
            height: 30px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .modal-header button:hover {
            background: #3e3e42;
            border-radius: 4px;
        }

        .modal-body {
            padding: 20px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-group label {
            display: block;
            margin-bottom: 5px;
            color: #d4d4d4;
            font-weight: 500;
        }

        .form-group input,
        .form-group select,
        .form-group textarea {
            width: 100%;
            padding: 8px 12px;
            background: #1e1e1e;
            border: 1px solid #3e3e42;
            border-radius: 4px;
            color: #d4d4d4;
            font-family: inherit;
            box-sizing: border-box;
        }

        .form-group textarea {
            height: 80px;
            resize: vertical;
        }

        .form-group input:focus,
        .form-group select:focus,
        .form-group textarea:focus {
            outline: none;
            border-color: #0078d4;
        }

        .form-actions {
            display: flex;
            gap: 10px;
            justify-content: flex-end;
            margin-top: 20px;
        }

        .form-actions button {
            padding: 8px 16px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-family: inherit;
        }

        .form-actions button[type="submit"] {
            background: #0078d4;
            color: white;
        }

        .form-actions button[type="submit"]:hover {
            background: #1464a8;
        }

        .form-actions button[type="button"] {
            background: #3e3e42;
            color: #d4d4d4;
        }

        .form-actions button[type="button"]:hover {
            background: #4a4a4a;
        }
    </style>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/monaco-editor/0.44.0/min/vs/editor/editor.main.min.css">
</head>
<body>
    <!-- Menu Bar -->
    <div class="menu-bar">
        <div class="menu-item" data-menu="file">
            File
            <div class="menu-dropdown" id="file-menu">
                <div class="menu-dropdown-item" onclick="menuAction('new-rule')">
