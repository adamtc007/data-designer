        function switchBottomPanel(panelName) {
            // Update tabs
            document.querySelectorAll('.bottom-panel-tab').forEach(tab => {
                tab.classList.remove('active');
            });
            document.querySelector(`[data-panel="${panelName}"]`).classList.add('active');

            // Update content
            document.querySelectorAll('#bottom-panel-content > div').forEach(content => {
                content.style.display = 'none';
            });
            document.getElementById(`${panelName}-content`).style.display = 'block';

            currentBottomPanel = panelName;
